@model IEnumerable<DoctorAppointmentWebApplication.Models.AppointmentEntity>

@{
    ViewData["Title"] = "ManageTimeSlots";
}

<h1>ManageTimeSlots</h1>

<h1><u>Manage Appointments</u></h1>
<br />

@if (Model.Any())
{
    @foreach (var timeSlots in Model)
    {
        <div class="card mb-3">
            <div class="card-body">
                <h4 class="card-title">@timeSlots.DoctorName</h4>
                <h5>@timeSlots.DoctorNumber</h5>
                @{
                    var date = timeSlots.AppointmentDate.ToString("dd/MM/yyyy");
                    var time = timeSlots.AppointmentTime.ToShortTimeString();
                }
                <p><small>@date    @time</small></p>
            </div>
            <div class="card-footer">
                <a type="button" asp-action="EditAppointment" asp-route-id="@timeSlots.PartitionKey" asp-route-rowkey="@timeSlots.RowKey" class="btn btn-success">Reschedule Appointment</a>
                <!-- Trigger the modal with a button -->
                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#@timeSlots.RowKey">Delete</button>
                <!-- Modal -->
                <div class="modal fade" id="@timeSlots.RowKey" tabindex="-1" role="dialog">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="deleteModalLabel">Are you sure?</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                Deleting the appointment will delete the appointment session made previously by you as a user.
                            </div>
                            <div class="modal-footer">
                                <form asp-action="DeleteAppointment" asp-route-userid="@timeSlots.PartitionKey" asp-route-rowkey="@timeSlots.RowKey" asp-route-created-by="@timeSlots.CreatedBy"><button class="btn btn-danger" type="submit">Delete Appointment</button></form>
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>
                @*@if (ViewBag.msg != null) {
                       <div class="modal fade" id="deleteStatusModal" tabindex="-1" role="dialog">
                           <div class="modal-dialog" role="document">
                               <div class="modal-content">
                                   <div class="modal-header">
                                       <h5 class="modal-title" id="deleteStatusModalLabel">@ViewBag.msg</h5>
                                       <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                           <span aria-hidden="true">&times;</span>
                                       </button>
                                   </div>
                                   <div class="modal-footer">
                                       <button type="button" class="btn btn-secondary" data-dismiss="modal">Ok</button>
                                   </div>
                               </div>
                           </div>
                       </div>
                       <script>
                           $(function() {
                           $("#deleteStatusModal ").dialog();
                           });
                       </script>
                    }*@
            </div>
        </div>
    }
}

else
{
    <h5>
        Sorry, you have no time slots made. <br />
        Please try again once you have made a time slot
    </h5>
}