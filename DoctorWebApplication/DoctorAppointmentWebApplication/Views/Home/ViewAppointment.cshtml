@model IEnumerable<DoctorAppointmentWebApplication.Models.AppointmentEntity>

@{
    ViewData["Title"] = "ViewAppointment";
}

<h1><u>Manage Appointments</u></h1>
<br />

@if (Model.Any())
{
    @foreach (var patient in Model)
    {
        <div class="card mb-3">
            <div class="card-body">
                <h4 class="card-title">@patient.DoctorName</h4>
                <h7 class="card-title">@patient.AppointmentDate</h7>
            </div>
            <div class="card-footer">
                <a href="#" class="btn btn-danger">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
}

else
{
<h5>
    Sorry, you have no appointments made. <br /> 
    Please try again once you have made an appointment
</h5>
}



